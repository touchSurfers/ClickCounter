<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1f2021"
    >
   <View android:id="@+id/view_action"
		android:layout_width="fill_parent" 
		android:layout_height="51dip"
		android:background="@drawable/notes_actionbar" />
		
		
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="51dip"
		android:background="#1f2021" >
		
		<RelativeLayout
	    android:orientation="vertical"
	    android:layout_gravity="center_horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView_date" android:maxLines="1" android:textColor="#818181" android:text="TextView" android:layout_alignBottom="@+id/button1" android:layout_alignParentLeft="true" android:layout_marginLeft="16dp"></TextView>
		<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/button_map" android:text="Button" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"></Button>
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView_address" android:maxLines="1" android:textColor="#818181" android:text="TextView" android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/textView_date"></TextView>
		</RelativeLayout>
	</LinearLayout>	
		
   
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal" android:layout_marginTop="5dip">

<LinearLayout android:layout_width="90dip" android:layout_height="90dip" android:background="@drawable/photo_frame" android:orientation="horizontal" android:layout_margin="3dip">      
<ImageView android:scaleType="centerCrop" android:adjustViewBounds="false" android:gravity="center_horizontal" android:id="@+id/photo1"  android:src="@drawable/her_face" android:layout_gravity="center_vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_margin="4dip"></ImageView>
</LinearLayout>

<LinearLayout android:layout_width="90dip" android:layout_height="90dip" android:background="@drawable/photo_frame" android:orientation="horizontal" android:layout_margin="3dip">      
<ImageView android:scaleType="centerCrop" android:adjustViewBounds="false" android:gravity="center_horizontal" android:id="@+id/photo2"  android:src="@drawable/her_face" android:layout_gravity="center_vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_margin="4dip"></ImageView>
</LinearLayout>

<LinearLayout android:layout_width="90dip" android:layout_height="90dip" android:background="@drawable/photo_frame" android:orientation="horizontal" android:layout_margin="3dip">      
<ImageView android:scaleType="centerCrop" android:adjustViewBounds="false" android:gravity="center_horizontal" android:id="@+id/photo3"  android:src="@drawable/her_face" android:layout_gravity="center_vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_margin="4dip"></ImageView>
</LinearLayout>


</LinearLayout>
    
   
   <RatingBar 
      android:id="@+id/ratingBar"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:numStars="5"
      android:layout_gravity="center_horizontal"
      android:isIndicator="false"
      style="@style/foodRatingBar"/>  

    
       <TextView android:padding="10dip" android:paddingTop="20dip" android:maxLength="150" android:lines="5" android:background="@drawable/notes_note"  android:text="" android:id="@+id/notes_plus" android:layout_height="133dip" android:layout_width="295dip" android:layout_gravity="center_horizontal"  android:onClick="onClick"                
        android:clickable="true" ></TextView>
   
   <View android:id="@+id/separator_action"
		android:layout_width="fill_parent" 
		android:layout_height="13dip"
		android:background="@drawable/notes_separator" />
		
    <RelativeLayout
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center_horizontal">
<ImageButton android:id="@+id/camera_button" android:background="@null" android:layout_height="wrap_content" android:src="@drawable/front_map_button" android:layout_margin="10dip" android:layout_width="wrap_content" android:layout_centerVertical="true" android:layout_alignParentLeft="true" android:layout_marginLeft="55dp"></ImageButton>
<ImageButton android:id="@+id/edit_button" android:background="@null" android:layout_height="wrap_content" android:src="@drawable/front_history_button" android:layout_width="wrap_content" android:layout_alignTop="@+id/camera_button" android:layout_toRightOf="@+id/camera_button"></ImageButton>

 </RelativeLayout>
    
    
     

</LinearLayout>
