<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b4b4b4"
    >
   
   
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal" android:layout_marginTop="30dip">

<LinearLayout android:layout_width="73dip" android:layout_height="73dip" android:background="@drawable/image_frame" android:orientation="horizontal" android:layout_margin="3dip">      
<ImageView android:scaleType="centerCrop" android:adjustViewBounds="false" android:gravity="center_horizontal" android:id="@+id/photo1"  android:src="@drawable/icon" android:layout_gravity="center_vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_margin="3dip"></ImageView>
</LinearLayout>

<LinearLayout android:layout_width="73dip" android:layout_height="73dip" android:background="@drawable/image_frame" android:orientation="horizontal" android:layout_margin="3dip">      
<ImageView android:scaleType="centerCrop" android:adjustViewBounds="false" android:gravity="center_horizontal" android:id="@+id/photo2"  android:src="@drawable/icon" android:layout_gravity="center_vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_margin="3dip"></ImageView>
</LinearLayout>

<LinearLayout android:layout_width="73dip" android:layout_height="73dip" android:background="@drawable/image_frame" android:orientation="horizontal" android:layout_margin="3dip">      
<ImageView android:scaleType="centerCrop" android:adjustViewBounds="false" android:gravity="center_horizontal" android:id="@+id/photo3"  android:src="@drawable/icon" android:layout_gravity="center_vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_margin="3dip"></ImageView>
</LinearLayout>


</LinearLayout>
   <Button android:id="@+id/edit_button" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Edit"></Button>
     
 
   
    <Button android:text="camera" android:id="@+id/camera_button" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
   <Button android:text="Save" android:id="@+id/save_button" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
   
   
   
    <EditText android:layout_height="50dip" android:text="EditText" android:id="@+id/notes" android:layout_width="fill_parent"></EditText>
    <RatingBar android:id="@+id/ratingBar" android:layout_width="wrap_content" android:layout_height="wrap_content"></RatingBar>
   

</LinearLayout>
