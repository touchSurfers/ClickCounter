       <ImageButton android:src="@drawable/front_chick" android:background="@null" android:scaleType="fitXY" android:text="Chick +" android:id="@+id/chick_plus" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="130dip" android:layout_marginTop="110dip"></ImageButton>
       
    </RelativeLayout>
		
		
		   
 <View android:id="@+id/view_action"
		android:layout_width="fill_parent" 
