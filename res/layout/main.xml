<RelativeLayout
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">
<ImageButton android:id="@+id/chick_notes" android:background="@null" android:layout_height="wrap_content" android:src="@drawable/front_history_button" android:layout_margin="0dip" android:layout_width="wrap_content" android:layout_alignTop="@+id/chick_list" android:layout_alignParentRight="true"></ImageButton>
<ImageButton android:id="@+id/chick_list" android:background="@null" android:layout_height="wrap_content" android:src="@drawable/front_map_button" android:layout_width="wrap_content" android:layout_centerVertical="true" android:layout_toLeftOf="@+id/chick_notes" android:layout_margin="10dip" android:layout_marginLeft="55dp"></ImageButton>

 </RelativeLayout>

