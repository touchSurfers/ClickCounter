    android:background="#202020"
    >
 <View android:id="@+id/view_action"
		android:layout_width="fill_parent" 
		android:layout_height="51dip"
		android:background="@drawable/actionbar_front" />
		
		<RelativeLayout
    android:orientation="vertical"
    android:layout_width="295dip"
    android:layout_height="282dip"
    android:background="@drawable/front_machine" android:layout_gravity="center_horizontal">
    
    <TextView  
	android:id="@+id/counter_view"
    android:text="0000"
