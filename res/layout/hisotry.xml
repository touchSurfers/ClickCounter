<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#202020"
    >

 <View android:id="@+id/view_action"
		android:layout_width="fill_parent" 
		android:layout_height="51dip"
		android:background="@drawable/list_actionbar" />
		
   <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@android:id/tabhost" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1" >
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent" android:weightSum="1">
			<View android:layout_width="fill_parent" android:layout_height="0.5dip"
				android:background="#000" />
			<TabWidget android:id="@android:id/tabs"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="0dip" android:layout_marginRight="0dip" />
			
			
			<FrameLayout android:id="@android:id/tabcontent"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				
	    
				<ListView
			        android:id="@+id/list"
			        android:divider="#343536"
			        android:dividerHeight="1dip"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_weight="1"
			         android:background="#202020"/>
			         
			       
			         
			</FrameLayout>
			
		</LinearLayout>
		
	</TabHost>
	
	<RelativeLayout
	    android:orientation="vertical"
	    android:layout_gravity="center_horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" android:gravity="left">
	
   <ImageView android:layout_height="wrap_content" android:id="@+id/BuyView1" android:src="@drawable/buy_dialog" android:layout_width="wrap_content"></ImageView>
   <ImageButton android:id="@+id/buy_button" android:src="@drawable/buy_button" android:layout_height="wrap_content" android:background="@null" android:layout_width="wrap_content" android:layout_marginLeft="200dip" android:layout_marginTop="125dip"></ImageButton>
   
   </RelativeLayout> 
   
   
   <Button android:id="@+id/button_map" android:text="show on map" android:layout_width="match_parent" android:layout_height="wrap_content"></Button>
	
        
</LinearLayout>
	