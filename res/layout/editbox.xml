<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
    
    <EditText android:background="@drawable/notes_note" android:singleLine="false" android:maxLength="300" android:lines="20" android:gravity="top"  android:padding="10dip" android:paddingTop="20dip" android:inputType="textMultiLine" android:textColor="#768490" android:id="@+id/notes_added" android:layout_width="fill_parent" android:layout_above="@+id/button1" android:layout_height="fill_parent" android:layout_margin="12dip"></EditText>
    <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"></Button>
    <Button android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"></Button>
  
    </RelativeLayout>